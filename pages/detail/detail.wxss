page {
  width: calc(100vw - 100rpx);
  margin: 0 auto;
}
.jobCard {
  border-bottom: 2rpx solid #ececec;
  margin-bottom: 33rpx;
  padding: 46rpx 0 33rpx;
}
.jobCard .jobName {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.jobCard .jobDetail {
  font-size: 28rpx;
  display: flex;
  height: 40rpx;
}
.jobCard .jobDetail view {
  margin-right: 52rpx;
}
.jobCard .jobDetail text {
  margin-right: 20rpx;
}
.jobContent .firstTitle {
  margin: 34rpx 0 18rpx;
  display: flex;
  align-items: center;
  height: 50rpx;
  font-size: 36rpx;
  line-height: 50rpx;
}
.jobContent .firstTitle view {
  background-color: #2f88e5;
  width: 6rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.jobContent .subtitle {
  color: #5c5a58;
  font-size: 28rpx;
}
.jobContent .duty_wrap {
  color: #5c5a58;
  line-height: 54rpx;
}
.jobContent .mail_wrap {
  height: 44rpx;
  margin-top: 50rpx;
  color: #5c5a58;
  display: flex;
  border-bottom: 2rpx solid #ececec;
  padding-bottom: 40rpx;
}
.jobContent .mail_wrap .mail {
  margin-left: 20rpx;
}
.jobContent .seniorinfo_wrap {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.jobContent .seniorinfo_wrap image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}
.jobContent .seniorinfo_wrap .seniorName {
  font-size: 32rpx;
}
.jobContent .seniorinfo_wrap .lastLogin {
  color: #5c5a58;
  font-size: 24rpx;
}
.jobContent .jobTags_wrap {
  display: flex;
  margin: 0 auto 10rpx;
  color: #5c5a58;
  align-items: center;
  text-align: center;
}
.jobContent .jobTags_wrap .jobTags {
  height: 44rpx;
  display: flex;
  text-align: center;
  padding: 0 14rpx;
  line-height: 44rpx;
  margin-left: 33rpx;
  color: #fff;
  font-size: 22rpx;
  border-radius: 12rpx;
  background-color: #a9c5e3;
}
.jobContent .silkbag {
  display: flex;
  line-height: 54rpx;
  margin: 34rpx auto 18rpx;
  font-size: 28rpx;
  font-weight: 600;
}
.jobContent .tip_wrap {
  margin-bottom: 230rpx;
  height: 36rpx;
  font-size: 26rpx;
  color: #5c5a58;
}
.jobContent .tip_wrap text {
  color: #2f88e5;
}
.btnBottom {
  border-top: 2rpx solid #ececec;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 145rpx;
  background-color: #fff;
  padding-top: 33rpx;
  height: 178rpx;
}
.btnBottom .share_wrap {
  font-size: 24rpx;
  font-weight: 400;
  margin-right: 33rpx;
  width: 48rpx;
}
.btnBottom .share_wrap .share {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.btnBottom .share_wrap button {
  position: absolute;
  top: 20;
  left: 0;
  width: 108rpx;
  height: 88rpx;
  opacity: 0;
}
.btnBottom .collect_wrap {
  font-size: 24rpx;
  font-weight: 400;
  margin-right: 33rpx;
  width: 72rpx;
}
.btnBottom .collect_wrap .uncollected {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.btnBottom .collect_wrap .collected {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #2f88e5;
}
.btnBottom .question {
  background-color: #2f88e5;
  width: 534rpx;
  color: #fff;
  height: 88rpx;
}
.btnBottom .question view {
  height: 100%;
  width: 100%;
  align-items: center;
  justify-content: center;
  display: flex;
}
