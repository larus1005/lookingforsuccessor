.user {
  padding-bottom: 200rpx;
}
.user .user_img_wrap {
  width: 100%;
  height: 282rpx;
  background: linear-gradient(#2f88e5, #4eb7f3);
  position: relative;
  margin-bottom: 226rpx;
}
.user .user_img_wrap .user_info {
  position: absolute;
  left: 52rpx;
  top: 120rpx;
  display: flex;
  align-items: center;
}
.user .user_img_wrap .user_info image {
  width: 226rpx;
  height: 226rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  margin-right: 46rpx;
}
.user .user_img_wrap .user_info .username {
  color: #fff;
  font-size: 40rpx;
  font-weight: 500;
}
.user .personal {
  width: calc( 100vw - 100rpx );
  margin: 0 auto 104.6rpx;
  color: #2b2825;
}
.user .personal .personalContent navigator {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  padding: 24.6rpx 0 25.4rpx;
  border-bottom: 2rpx solid #ececec;
}
.user .information {
  width: calc( 100vw - 100rpx );
  margin: 0 auto;
}
.user .information navigator {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  padding: 24.6rpx 0 25.4rpx;
  border-bottom: 2rpx solid #ececec;
}
